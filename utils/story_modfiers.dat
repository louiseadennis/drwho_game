DROP TABLE IF EXISTS `story_modifiers`;
CREATE TABLE `story_modifiers` (
  `modifier_id` int(11) NOT NULL AUTO_INCREMENT,
  `story_id` int(11),
  `text` text,
  `remove` int(11),
  `remove_modifier` text,
  PRIMARY KEY (`modifier_id`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1;

